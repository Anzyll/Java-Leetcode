class Solution {
    public boolean isHappy(int n) {
        int slow = square(n);
        int fast = square(square(n));
        while(slow!=fast){
          slow=square(slow);
          fast=square(square(fast));
        }
        return slow==1;
    }

    public int square(int num){
       int sum=0;
       while(num>0){
        int digit=num%10;
        sum+=digit*digit;
        num=num/10;
       }
       return sum;
    }
}
